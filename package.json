{
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/sinon": "^9.0.4",
        "@types/sinon-chai": "^3.2.4",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "glob": "^7.1.6",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "mocha": "^8.0.1",
        "mocha-headless-chrome": "^3.1.0",
        "npm-check-updates": "^7.0.1",
        "prettier": "^2.0.5",
        "requirejs": "^2.3.6",
        "shenanigans-manager": "^0.3.0",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "typescript": "^3.9.5",
        "watch": "^1.0.2",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    },
    "ham-it-up": true,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,js,json,md,ts,tsx}": [
            "prettier --ignore-path .prettierignore --write"
        ]
    },
    "name": "eightbittr-root",
    "scripts": {
        "clean": "lerna run clean",
        "compile": "tsc -b",
        "format": "prettier --ignore-path .prettierignore --list-different \"./**/*.{css,js,json,md,ts,tsx}\"",
        "format:write": "yarn format --write",
        "hydrate": "lerna run hydrate && yarn run compile",
        "link": "lerna run link && yarn lerna exec yarn link shenanigans-manager",
        "lint": "eslint --ignore-path .eslintignore \"./packages/**/*.{js,ts,tsx}\"",
        "publish:ci": "lerna run publish:ci",
        "test": "lerna run test",
        "verify": "yarn run hydrate && yarn compile && yarn lint && yarn format && yarn test"
    }
}
