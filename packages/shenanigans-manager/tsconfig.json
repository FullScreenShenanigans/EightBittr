{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["dom", "es2015.collection", "es2015.promise", "es5"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
