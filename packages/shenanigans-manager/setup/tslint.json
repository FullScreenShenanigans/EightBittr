{
    "extends": "tslint:all",
    // Excluded so that symlinked modules won't get linted
    "linterOptions": {
        "exclude": [
            "./node_modules/**/*"
        ]
    },
    "rules": {
        "array-type": [true, "array"],
        "file-name-casing": false,
        "forin": false,
        "linebreak-style": false,
        "max-classes-per-file": [true, 1, "exclude-class-expressions"],
        "max-line-length": [true, 140],
        "member-ordering": false,
        "newline-before-return": false,
        "newline-per-chained-call": false,
        "no-implicit-dependencies": [true, "dev"],
        "no-inferred-empty-object-type": false,
        "no-magic-numbers": [true, -1, 0, 1, 2, 3, 10],
        "no-parameter-reassignment": false,
        "no-redundant-jsdoc": false,
        "no-submodule-imports": false,
        "no-unused-variable": false,
        "strict-boolean-expressions": [true, "allow-null-union", "allow-undefined-union"],
        "switch-final-break": [true, "always"],
        "typedef": false
    }
}
