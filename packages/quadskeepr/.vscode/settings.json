{
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "files.exclude": {
        "**/*.d.ts": true,
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*?.js": { "when": "$(basename).tsx" }
    },
    "tslint.alwaysShowRuleFailuresAsWarnings": true,
    "tslint.autoFixOnSave": true,
    "typescript.tsdk": "node_modules/typescript/lib"
}
